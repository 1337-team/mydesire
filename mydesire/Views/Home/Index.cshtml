@{
    ViewData["Title"] = "Главная";
}
@using Microsoft.AspNetCore.Identity
@using mydesire.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model RegisterViewModel

<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
<link rel="stylesheet" href="/css/main.css" />
<noscript><link rel="stylesheet" href="/css/noscript.css" /></noscript>

<!-- Page Wrapper -->
    <div id="page-wrapper">

        <!-- Wrapper -->
            <div id="wrapper">

                <!-- Panel (Banner) -->
                    <section class="panel banner right">
                        <div class="content color0 span-3-75">
                            <h1 class="major">Hello, this is<br />
                            My Desire</h1>
                            <p>Насколько больше ты можешь узнать о человеке, узнав о его <strong>желаниях</strong>...</p>
                            <ul class="actions">
                                <li><a href="/wishes" class="button special color1">Перейти к желаниям</a></li>
                            </ul>
                        </div>
                        <div class="image filtered span-1-75" data-position="25% 25%">
                            <img src="images/pic01.jpg" alt="" />
                        </div>
                    </section>

                <!-- Panel (Spotlight) -->
                    <section class="panel spotlight medium right" id="first">
                        <div class="content span-7">
                            <blockquote>
                                <p>Когда творишь добро, сам и испытываешь некое радостное удовлетворение и законную  гордость, сопутствующую чистой совести.</p>
                                <footer>Мишель де Монтень, 1567</footer>
                            </blockquote>
                        </div>
                        <div class="image filtered tinted" data-position="top left">
                            <img src="images/pic02.jpg" alt="" />
                        </div>
                    </section>

                <!-- Panel -->
                    <section class="panel color1">
                        <div class="intro joined">
                            <h2 class="major">6 из 10</h2>
                            <p>Хотели бы делиться своими желаниями в сети и помогать своим друзьям в их реализации. Ведь добро запоминается на долгие годы, независимо от его масштабов. Но самое ценное, в добре – это то, что оно заразительно.</p>
                        </div>
                        <div class="inner">
                            <ul class="grid-icons five connected">
                                <li><span class="icon fa-user"><span class="label">Lorem</span></span></li>
                                <li><span class="icon fa-user"><span class="label">Ipsum</span></span></li>
                                <li><span class="icon fa-user"><span class="label">Dolor</span></span></li>
                                <li><span style="color: black;" class="icon fa-user"><span class="label">Sit</span></span></li>
                                <li><span style="color: black;" class="icon fa-user"><span class="label">Amet</span></span></li>
                                <li><span class="icon fa-user"><span class="label">Nullam</span></span></li>
                                <li><span class="icon fa-user"><span class="label">Nullam</span></span></li>
                                <li><span class="icon fa-user"><span class="label">Nullam</span></span></li>
                                <li><span style="color: black;" class="icon fa-user"><span class="label">Nullam</span></span></li>
                                <li><span style="color: black;" class="icon fa-user"><span class="label">Nullam</span></span></li>
                            </ul>
                        </div>
                    </section>

                <!-- Panel (Spotlight) -->
                    <section class="panel spotlight large left">
                        <div class="content span-5">
                            <h2 class="major">Исполни желание незнакомца</h2>
                            <p>Просто так. Безвозмездно. Сделай человеку приятное и он будет вспоминать про это даже спустя десятки лет!</p>
                        </div>
                        <div class="image filtered tinted" data-position="top right">
                            <img src="images/pic03.jpg" alt="" />
                        </div>
                    </section>

                
                <!-- Panel -->
                    <section class="panel color4-alt">
                        <div class="intro color4">
                            <h2 class="major">Присоединяйся</h2>
                            <p>Мечтай. Исполняй. Вдохновляй.</p>
                        </div>
                        <div class="inner columns divided">
                            @if (!SignInManager.IsSignedIn(User)) {
                            <div class="span-3-25">
                                <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
                                    <div class="field half">
                                        <label for="name">Имя</label>
                                        <input type="text" name="name" id="name" />
                                    </div>
                                    <div class="field half">
                                        <label asp-for="Email">Email</label>
                                        <input asp-for="Email" type="email" id="email" />
                                        <span asp-validation-for="Email"></span>
                                    </div>
                                    <div class="field">
                                        <label asp-for="Password">Пароль</label>
                                        <input asp-for="Password" id="password"></input>
                                        <span asp-validation-for="Password"></span>
                                    </div>
                                    <div class="field">
                                        <label asp-for="ConfirmPassword">Повторите пароль</label>
                                        <input asp-for="ConfirmPassword" id="password-repeat"></input>
                                        <span asp-validation-for="ConfirmPassword"></span>
                                    </div>
                                    <ul class="actions">
                                        <li><input type="submit" asp-controller="Account" asp-action="Register" value="Зарегистрироваться" class="button special" /></li>
                                    </ul>
                                </form>
                                Уже зарегистрированы? <a href="/Account/Login">Войти</a>
                            </div>
                            }
                            else {
                            <ul class="actions">
                                <li><a href="/wishes" class="button special color1">Перейти к желаниям</a></li>
                            </ul>
                            }
                            
                        </div>
                    </section>

                    @section Scripts {
                        @await Html.PartialAsync("_ValidationScriptsPartial")
                    }

                
                <!-- Copyright -->
                    <div class="copyright">&copy; L33T team: MyDesire</div>

            </div>

    </div>

<!-- Scripts -->
    <script src="/js/jquery.min.js"></script>
    <script src="/js/skel.min.js"></script>
    <script src="/js/main.js"></script>
